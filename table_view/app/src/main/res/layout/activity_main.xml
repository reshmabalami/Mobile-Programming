<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    android:background="#f0f0f0">

    <!-- First TextView centered horizontally and positioned at the top -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Hello World"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Second TextView positioned below the first TextView and aligned to the start -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="This is a RelativeLayout example"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Button positioned below the second TextView and aligned to the end -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="Click Me"
        android:textColor="#ffffff"
        android:background="#6200EE" />

</RelativeLayout>
